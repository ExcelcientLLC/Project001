<%= modelFormHeader @goal_category %>

<%= form_for(@goal_category, :remote => true) do |f| %>
  <% if @goal_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal_category.errors.count, "error") %> prohibited this goal category from being saved:</h2>

      <ul>
      <% @goal_category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="edit_label">
      <%= f.label :name %><br />
    </div>
    <div class="edit_field">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="field">
    <div class="edit_label">
      <%= f.label "Image" %><br />
    </div>
    <% if @goal_category.avatar_file_name %>
      <div class="edit_field">
        <%= image_tag @goal_category.avatar.url(:medium) %>
      </div>
    <% end %>
    <div class="edit_field">
      <%= f.file_field :avatar %> <br />
    </div>
  </div>
  <div class=button_format>
    <div class="actions">
      <%= submitButtonForRecord(f, @goal_category) %>
    </div>
  </div>
<% end %>

<% if not @goal_category.new_record? %>
  <div class=delete_format>
    <%= deleteImageButton goal_category_path(@goal_category), "Are you sure you want to delete this goal category?" %>
  </div>
<% end %>