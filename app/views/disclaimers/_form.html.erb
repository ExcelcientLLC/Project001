<%= modelFormHeader @disclaimer %>

<%= form_for(@disclaimer, :url => [@presets, @disclaimer], :remote => true) do |f| %>
  <% if @disclaimer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@disclaimer.errors.count, "error") %> prohibited this disclaimer from being saved:</h2>

      <ul>
      <% @disclaimer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="edit_label">
      <%= f.label :name %><br />
    </div>
    <div class="edit_field">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class= "large_field">
    <div class="edit_label">
      <%= f.label :body %><br />
    </div>
    <div class="edit_description_field">
      <%= f.text_area :body %>
    </div>
  </div>
  
  <div style="clear:left">
    <div class=button_format>
      <div class="actions">
        <%= submitButtonForRecord(f, @disclaimer) %>
      </div>
    </div>
  </div>
<% end %>

<% if not @disclaimer.new_record? %>
  <div class=delete_format>
    <%= deleteImageButton disclaimer_path(@disclaimer), "Are you sure you want to delete this disclaimer?", @disclaimer %>
  </div>
<% end %>
