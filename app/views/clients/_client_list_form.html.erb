<div class="filed">
  <div class=search>
    <%= form_tag clients_path, :method => 'get' do %>
      <%= hidden_field_tag :direction, params[:direction] %>
      <%= hidden_field_tag :sort, params[:sort] %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil %>
      </p>
    <% end %>
  </div>
  <div class=add>
    <%= link_to image_tag("Nuvola_Red_Plus.svg", size: "28x28"), new_client_path, :remote => true%>
  </div>
</div>

<div>
  <div>
    <div class="table_header_01"><%= sortable "first_name", "First Name"%></div>
    <div class="table_header_01"><%= sortable "last_name", "Last Name"%></div>
    <div class="table_header_02"><%= sortable "email", "Email"%></div>
  </div>
  <div>
    <% @clients.each do |client| %>
      <%= link_to(client_path(client), :remote => true) do %>
      <div class="element">
        <div class="table_body_01"><%= client.first_name %></div>
        <div class="table_body_01"><%= client.last_name %></div>
        <div class="table_body_02"><%= client.email %></div>
      </div>
      <%end%>
    <% end %>
  </div>
</div>
