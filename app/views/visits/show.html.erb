<% @title = "VISITS DETAIL" %>
<%= render 'common/header' %>

<div class="admin_body">

<div class="sub_header">
  <div id="visit_form">
    <% if hasItem(@client.visits, @form_visit) and @visit != @client.visits.first %>
      <div class="arrow">
        <%= link_to image_tag("Go-previous.png", size: "28x28"), [@client, previous_item(@client.visits, @visit)] %>
      </div>
    <% end %>

    <%= render 'form' %>

    <div class="arrow">
      <% if hasItem(@client.visits, @form_visit) %>
        <% if @visit != @client.visits.last  %>
          <%= link_to image_tag("Go-next.png", size: "28x28"), [@client, next_item(@client.visits, @visit)] %>
        <% else %>
          <%= newImageButton client_visits_path(@form_visit.client), false, :post %>
        <% end %>
      <% else %>
        <%= button_to 'Back', client_visit_path(@client, @visit), :method => 'get' %>
      <% end %>
    </div>
  </div>
  
  <div class="sub_header_right">
    <div class="sub_header_right_element" style="margin-left:12px">
        <%= deleteImageButton client_visit_path(@visit.client, @visit), "Are you sure you want to delete this visit?", false %>
    </div>
    <div class="sub_header_right_element">
      <%= button_to "Client List", clients_path, :method => :get %>
    </div>
    <div class="sub_header_right_element">
      <%= button_to "Presets", presets_path, :method => :get %>
    </div>
    <div class="sub_header_right_element">
      <%= button_to "Timeline", client_visits_path(@client), :method => :get %>
    </div>
  </div>
</div>

<!--Goal Section-->
<div style="width:100%">
<div id="goal_list" class="visits_list_set">
	<%= render :partial => '/goals/goal_list_form' %>
</div>
<div style="float: right; margin-right: 55px">
<%= render 'disclaimer_form' %>
</div>
<div id="goal" class="detail_view">
	<%= render :partial => '/goals/form' %>
</div>
</div>

<!--Todo Section-->
<div style="width:100%">
<div id="todo_list" class="visits_list_set">
	<%= render :partial => '/to_dos/todo_list_form' %>
</div>
<div id="todo" class="detail_view">
	<%= render :partial => '/to_dos/form' %>
</div>
</div>

</div>
