<%= render 'common/header' %>

<div class=admin_body>
<%= render 'form' %>
<% if @visit != @client.visits.first %>
    <%= link_to 'Previous', [@client, previous_visit(@client.visits, @visit)] %>
<% end %>
<% if @visit != @client.visits.last  %>
    <%= link_to 'Next', [@client, next_visit(@client.visits, @visit)] %>
<% end %>
<div style="float:right;margin-right:32px;margin-bottom:15px">
  <div style="float:right">
    <%= button_to "Timeline", client_visits_path(@client), :method => :get %>
  </div>
  <div style="float:right">
    <%= button_to "Client List", clients_path, :method => :get %>
  </div>
</div>

<!--Goal Section-->
<div style="width:100%">
<div id="goal_list" class="visits_list_set">
	<%= render :partial => '/goals/goal_list_form' %>
</div>
<div id="goal" class="visits_detail_view">
	<h1>Create Goal</h1>
	<%= render :partial => '/goals/form' %>
</div>
</div>

<!--Todo Section-->
<div style="width:100%">
<div id="todo_list" class="visits_list_set">
	<%= render :partial => '/to_dos/todo_list_form' %>
</div>
<div id="todo" class="visits_detail_view">
	<h1>Create To Do</h1>
	<%= render :partial => '/to_dos/form' %>
</div>
</div>

</div>
