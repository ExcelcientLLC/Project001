<table>
  <tr>
    <th>Current value</th>
    <th>Current expenditures</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goal_states.each do |goal_state| %>
  <tr>
    <td><%= goal_state.current_value %></td>
    <td><%= goal_state.current_expenditures %></td>
    <td><%= link_to 'Show', goal_state %></td>
    <td><%= link_to 'Edit', edit_goal_state_path(goal_state) %></td>
    <td><%= link_to 'Destroy', goal_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

